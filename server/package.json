{
  "name": "server",
  "version": "1.0.0",
  "description": "The backend for the voice to text and insights service",
  "main": "index.ts",
  "scripts": {
    "tsc": "npx tsc -watch",
    "dev": "nodemon  dist/index.js",
    "codegen-generate": "graphql-codegen --config codegen.yml",
    "generate": "npm run prisma-generate && npm run codegen-generate",
    "prisma-generate": "npx prisma generate --schema src/prisma/schema.prisma",
    "prisma-delete-seed": "npx prisma migrate reset --schema src/prisma/schema.prisma -f",
    "prisma-push": "npx prisma db push --schema src/prisma/schema.prisma",
    "actenv": "export $(grep -v '^#' .env | xargs)",
    "prepare": "cd .. && husky install server/.husky",
    "lint-server": "lint-staged",
    "test": "jest"
  },
  "prisma": {
    "seed": "ts-node --esm --transpile-only src/prisma/seed.ts"
  },
  "author": "Gustav Hartz",
  "license": "None",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@aws-sdk/client-s3": "^3.388.0",
    "@aws-sdk/client-sagemaker": "^3.385.0",
    "@aws-sdk/client-sqs": "^3.388.0",
    "@aws-sdk/s3-request-presigner": "^3.388.0",
    "@graphql-tools/schema": "^10.0.0",
    "@hocuspocus/extension-database": "^2.0.6",
    "@hocuspocus/server": "^2.0.6",
    "@prisma/client": "^5.0.0",
    "access-token-jwt": "^0.0.0",
    "aws-sdk": "^2.1428.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "express-ws": "^5.0.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-upload-minimal": "^1.5.4",
    "html-to-docx": "^1.8.0",
    "jsonwebtoken": "^9.0.1",
    "jwks-rsa": "^3.0.1",
    "morgan": "^1.10.0",
    "pino": "^8.12.1",
    "resend": "^0.17.2",
    "uuid": "^9.0.0",
    "yjs": "^13.6.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/graphql-modules-preset": "^4.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/async-lock": "^1.4.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.6",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "2.8.8",
    "prisma": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "type": "module",
  "engines": {
    "npm": "9.5.1",
    "node": "18.16.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "../.prettierrc.json"
}
