{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client", "jest"],
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "resolve": {
    "extensions": [".js", ".ts"]
  },
  "include": [
    "src/**/*.ts",
    "src/routes/graphql/resolvers/index.ts",
    "src/routes/graphql/schema.ts",
    "src/routes/graphql/context.ts"
  ],
  "exclude": ["**/node_modules", "**/dist", "**/*.local.*", "jest.config.js"]
}
