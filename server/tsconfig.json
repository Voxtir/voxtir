{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "skipLibCheck": false
  },
  "resolve": {
    "extensions": [".js", ".ts"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
